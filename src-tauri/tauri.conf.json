{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "finishnet",
  "version": "0.1.0",
  "identifier": "com.ChaHaiJiLan.finishnet",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "绘制拖网",
        "width": 800,
        "height": 600,
        "minWidth": 540,
        "minHeight": 600,
        "x": 500,
        "y": 200
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ipc://* http://ipc.localhost ws://127.0.0.1:8080",
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/config.json": "resources/config.json",
      "resources/CroppingSlope.json": "resources/CroppingSlope.json",
      "resources/core.exe": "resources/core.exe",
      "resources/**/*": "resources/"
    }
  },
  "plugins": {
    "all": true,
    "exe": {
      "active": true,
      "targets": "all"
    }
  }
}